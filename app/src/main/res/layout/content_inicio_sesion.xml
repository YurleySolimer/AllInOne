<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/allinonefondo2"
    tools:context="com.dinnosoft.proyectoallinone.InicioSesion">

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/buttonLogin"
        android:text="Confirmar"
        android:background="@drawable/botones"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/buttonRegister"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="50dp"
        android:id="@+id/buttonRegister"
        android:text="¿No tienes cuenta?, Regístrate aquí"
        android:background="@drawable/botones"
        android:layout_marginBottom="79dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/buttonLogin" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:hint="Ingresa tu Contraseña"
        android:textColor="#000"
        android:ems="10"
        android:id="@+id/editPassword"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:background="@drawable/botones3"
        android:layout_above="@+id/buttonLogin"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:inputType="textEmailAddress"
        android:hint="Ingresa tu Email"
        android:ems="10"
        android:id="@+id/editEmail"
        android:gravity="center"
        android:layout_marginBottom="23dp"
        style="@android:style/Widget.AutoCompleteTextView"
        android:background="@drawable/botones3"
        android:selectAllOnFocus="false"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:layout_above="@+id/editPassword"
        android:layout_alignStart="@+id/editPassword" />

</RelativeLayout>

