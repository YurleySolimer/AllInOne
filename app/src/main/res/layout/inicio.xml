<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/inicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dinnosoft.proyectoallinone.Inicio">

    <Button
        android:text="Perfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/Modificar" />

    <Button
        android:text="Consejos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/UltimasRutinas"
        android:layout_alignEnd="@+id/UltimasRutinas"
        android:layout_marginTop="51dp"
        android:id="@+id/Consejos" />

    <Button
        android:text="Rutinas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UltimasRutinas"
        android:layout_below="@+id/RutinasFavoritas"
        android:layout_alignStart="@+id/RutinasFavoritas"
        android:layout_marginTop="55dp" />

    <Button
        android:text="Mapas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="41dp"
        android:id="@+id/RutinasFavoritas"
        android:layout_below="@+id/Modificar"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Indice de Masa Muscular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/Consejos"
        android:layout_marginBottom="41dp"
        android:id="@+id/IMM" />
</RelativeLayout>
