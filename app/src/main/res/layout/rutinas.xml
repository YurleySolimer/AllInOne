<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rutinas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/allinonefondo3"
    tools:context="com.dinnosoft.proyectoallinone.Rutinas">

    <Button
        android:text="Rutina1"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:background="@drawable/botones"
        android:id="@+id/Rutina1"
        android:layout_above="@+id/Rutina2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@drawable/botones3"
        android:id="@+id/SelRutina"
        android:textAppearance="@android:style/TextAppearance.Holo.SearchResult.Title"
        tools:text="Seleccione una rutina" />

    <Button
        android:text="Rutina2"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:background="@drawable/botones"
        android:id="@+id/Rutina2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/Rutina1" />

    <Button
        android:text="Rutina3"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:background="@drawable/botones"
        android:id="@+id/Rutina3"
        android:layout_marginTop="58dp"
        android:layout_alignTop="@+id/Rutina2"
        android:layout_alignStart="@+id/Rutina2" />
</RelativeLayout>
